<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>{{post.title}}</title>
</head>

<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">TechBlog</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/customer/dashboard">Home</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="post-content">
        <h1>{{post.title}}</h1>
        <p>{{post.content}}</p>
    </div>

    <!-- Display comments -->
    <div class="comments-section">
        <h2>Comments:</h2>
        {{#each post.comments as |comment|}}
        <div class="comment">
            <p>{{comment.User.email}} says: {{comment.content}}</p>
        </div>
        {{/each}}
    </div>

    <!-- Submit a new comment -->
    <div class="submit-comment">
        <h2>Submit a Comment</h2>
        <form action="/customer/singleBlogPost/{{post.id}}/submitComment" method="POST">
            <textarea name="content" required placeholder="Your comment"></textarea>
            <button type="submit">Submit Comment</button>
        </form>
    </div>
    {{#if updated}}
    <div class="alert alert-success">
        Comment submitted successfully!
    </div>
    {{/if}}

    <!-- Actions for the current post -->
    <div class="post-actions">
        <a href="/customer/editBlogPost/{{post.id}}" class="btn btn-secondary">Edit Post</a>
        <form action="/customer/deleteBlogPost/{{post.id}}" method="POST">
            <input type="hidden" name="_method" value="DELETE" />
            <button type="submit" class="btn btn-danger">Delete Post</button>
        </form>

    </div>

    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this post?");
        }
    </script>
    <!-- Include jQuery, Popper.js, and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.x/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>